@model BookStoreApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    if(TempData["error"] != null)
    {
        <script>
            showToast('@TempData["error"]', "error")
        </script>
    }
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-4xl bg-white shadow-md rounded-lg p-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Login Section -->
        <div class="border-r border-gray-200 pr-6">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Log in</h2>
            <p class="text-sm text-gray-600 mb-4">Log in with your email address</p>
            <form asp-action="Login" method="post">
                <!-- Email Input -->
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Your email</label>
                    <input type="email" id="email" placeholder="Your email" asp-for="Email"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <!-- Password Input -->
                <div class="mb-4">
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Your password</label>
                    <input type="password" id="password" placeholder="Your password" asp-for="Password"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <!-- Show Password -->
                <div class="mb-6 flex items-center">
                    <input id="show-password" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                    <label for="show-password" class="ml-2 text-sm text-gray-700">Show your password</label>
                </div>

                <!-- Login Button -->
                <button type="submit"
                        class="w-full bg-gradient-to-r from-blue-500 to-blue-700 text-white py-2 px-4 rounded-md hover:from-blue-600 hover:to-blue-800">
                    Log
                    in
                </button>
                <a href="#" class="block mt-4 text-sm text-blue-600 hover:underline text-center">Forgot your password?</a>
            </form>
        </div>

        <!-- Register Section -->
        <div class="pl-6">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">If you have not have an account</h2>
            <p class="text-sm text-gray-600 mb-4">
                You will need to register for an account in order to purchase from our official shop.
            </p>
            <a asp-action="Register"
               class="block bg-gradient-to-r from-yellow-300 to-yellow-500 text-black text-center py-3 px-4 rounded-md hover:from-yellow-400 hover:to-yellow-600 font-bold">
                Register
                for a new account
            </a>
        </div>
    </div>
</div>
