@model BookStoreApp.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    if (TempData["error"] != null)
    {
        <script>
            showToast('@TempData["error"]', "error")
        </script>
    }
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-4xl bg-white shadow-md rounded-lg p-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Register Section -->
        <div class="border-r border-gray-200 pr-6">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Register</h2>
            <p class="text-sm text-gray-600 mb-4">Create a new account to get started</p>
            <form asp-action="Register" method="post">
                <!-- Name Input -->
                <div class="mb-4">
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your name</label>
                    <input type="text" id="name" placeholder="Your name" asp-for="Name"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <!-- Email Input -->
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Your email</label>
                    <input type="email" id="email" placeholder="Your email" asp-for="Email"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- Password Input -->
                <div class="mb-4">
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input type="password" id="password" placeholder="Password" asp-for="Password"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <!-- Confirm Password Input -->
                <div class="mb-4">
                    <label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                    <input type="password" id="confirm-password" placeholder="Confirm password" asp-for="ConfirmPassword"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>

                <!-- Register Button -->
                <button type="submit"
                        class="w-full bg-gradient-to-r from-blue-500 to-blue-700 text-white py-2 px-4 rounded-md hover:from-blue-600 hover:to-blue-800">
                    Register
                </button>
            </form>
        </div>

        <!-- Login Redirect Section -->
        <div class="pl-6">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Already have an account?</h2>
            <p class="text-sm text-gray-600 mb-4">
                Log in to your account and start shopping with us.
            </p>
            <a asp-action="Login"
               class="block bg-gradient-to-r from-yellow-300 to-yellow-500 text-black text-center py-3 px-4 rounded-md hover:from-yellow-400 hover:to-yellow-600 font-bold">
                Log in to your account
            </a>
        </div>
    </div>
</div>
