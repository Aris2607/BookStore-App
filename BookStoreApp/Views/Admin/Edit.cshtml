@model BookStoreApp.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<div class="max-w-4xl mx-auto p-6 bg-gray-50 shadow-md rounded-lg">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Book</h1>

    <form asp-action="Edit" class="space-y-6">
        <input type="hidden" asp-for="Id" />

        <!-- Book Title -->
        <div class="space-y-1">
            <label asp-for="Title" class="block text-sm font-medium text-gray-700">Book Title</label>
            <input asp-for="Title" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm" placeholder="Enter the book title" />
            <span asp-validation-for="Title" class="text-sm text-red-500"></span>
        </div>

        <!-- Author -->
        <div class="space-y-1">
            <label asp-for="Author" class="block text-sm font-medium text-gray-700">Author</label>
            <input asp-for="Author" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm" placeholder="Enter the author's name" />
            <span asp-validation-for="Author" class="text-sm text-red-500"></span>
        </div>

        <!-- Summary -->
        <div class="space-y-1">
            <label asp-for="Summary" class="block text-sm font-medium text-gray-700">Summary</label>
            <textarea asp-for="Summary" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm" rows="4" placeholder="Provide a brief summary"></textarea>
            <span asp-validation-for="Summary" class="text-sm text-red-500"></span>
        </div>

        <!-- Price -->
        <div class="space-y-1">
            <label asp-for="Price" class="block text-sm font-medium text-gray-700">Price ($)</label>
            <input asp-for="Price" type="number" step="0.01" class="w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm" placeholder="Enter the price" />
            <span asp-validation-for="Price" class="text-sm text-red-500"></span>
        </div>

        <!-- Save Button -->
        <div class="flex justify-between items-center">
            <a asp-action="Index" class="text-sm text-indigo-600 hover:underline">Back to List</a>
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg shadow hover:bg-indigo-700 text-sm">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
