@{
    ViewData["Title"] = "Page Not Found";
}

<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 text-center p-6">
    <div class="max-w-md">
        <img src="https://via.placeholder.com/400x300.png?text=404+Error" alt="404 Image" class="mx-auto mb-6 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-gray-800">404 - Page Not Found</h1>
        <p class="text-gray-600 mt-4">
            Oops! The page you're looking for doesn't exist or might have been removed.
        </p>
        <a href="/" class="mt-6 inline-block px-6 py-2 bg-blue-500 text-white font-medium text-sm rounded-md shadow-md hover:bg-blue-600 transition">
            Go Back to Home
        </a>
    </div>
</div>
