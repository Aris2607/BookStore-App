@model BookStoreApp.Models.Transaction

@{
    ViewData["Title"] = "Thank You";
}

@await Html.PartialAsync("_Navbar")

<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
    <div class="bg-white shadow-lg rounded-lg p-6 md:p-10 w-full max-w-3xl text-center">
        <div class="text-green-500 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="#942446">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2l4-4m1-3.586a2 2 0 0 1 2.828 0l1.415 1.414a2 2 0 0 1 0 2.828L12 21.414L4.343 13.757a2 2 0 0 1 0-2.828l1.415-1.414a2 2 0 0 1 2.828 0L12 12.586z" />
            </svg>
        </div>
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800">Thank You for Your Purchase!</h1>
        <p class="text-gray-600 mt-2">Your order has been successfully placed. We'll send you a confirmation email shortly.</p>

        <div class="mt-6">
            <h2 class="text-lg font-semibold text-gray-700">Order Summary</h2>
            <div class="bg-gray-50 border rounded-lg p-4 mt-3 text-left">
                <p class="text-gray-800"><strong>Order ID:</strong> #@Model.OrderId</p>
                <p class="text-gray-800"><strong>Total:</strong> $@Model.Total.ToString("F")</p>
                <p class="text-gray-800"><strong>Shipping Address:</strong> @Model.Address</p>
            </div>
        </div>

        <div class="mt-8 flex flex-col md:flex-row gap-4 justify-center">
            <a href="/order" class="w-full md:w-auto inline-block px-6 py-2 text-sm font-medium text-white rounded-md shadow" style="background: #942446;">
                View My Orders
            </a>
            <a href="/" class="w-full md:w-auto inline-block px-6 py-2 text-sm font-medium text-gray-700 bg-gray-200 hover:bg-gray-300 rounded-md shadow">
                Back to Home
            </a>
        </div>
    </div>
</div>
